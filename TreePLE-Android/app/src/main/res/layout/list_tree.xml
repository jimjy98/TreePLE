<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tree_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="ID here."
        />

    <TextView
        android:id="@+id/tree_species"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Species here."/>

    <TextView
        android:id="@+id/tree_dimensions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Dimensions here."
        />

    <TextView
        android:id="@+id/tree_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Status and landType here."
        />

    <TextView
        android:id="@+id/tree_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Location here."
        />

    <TextView
        android:id="@+id/tree_coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Coordinates here."
        />

</LinearLayout>